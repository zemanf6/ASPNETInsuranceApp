@model InsuranceApp.Presentation.ViewModels.InsuranceFormViewModel

<form asp-action="@ViewContext.RouteData.Values["action"]" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="InsuredPersonId" />

    <div class="mb-3">
        <label asp-for="InsuranceType" class="form-label">Typ pojištění <span class="text-danger">*</span></label>
        <select asp-for="InsuranceType" asp-items="Model.InsuranceTypeOptions" class="form-select">
            <option value="">-- Vyberte typ pojištění --</option>
        </select>
        <span asp-validation-for="InsuranceType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Subject" class="form-label">Předmět <span class="text-danger">*</span></label>
        <input asp-for="Subject" class="form-control" placeholder="Např. dům, auto, zdraví..." />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Amount" class="form-label">Částka <span class="text-danger">*</span></label>
        <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0" max="100_000_000_000" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ValidFrom" class="form-label">Platnost od <span class="text-danger">*</span></label>
        <input asp-for="ValidFrom" class="form-control" type="date" />
        <span asp-validation-for="ValidFrom" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ValidTo" class="form-label">Platnost do <span class="text-danger">*</span></label>
        <input asp-for="ValidTo" class="form-control" type="date" />
        <span asp-validation-for="ValidTo" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2 mt-4">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Uložit
        </button>
        <a asp-controller="InsuredPerson"
           asp-action="Details"
           asp-route-id="@Model.InsuredPersonId"
           class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Zpět
        </a>
    </div>
</form>
