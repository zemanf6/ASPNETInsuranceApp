@model InsuranceApp.Presentation.ViewModels.InsuredPersonFormViewModel

<form asp-action="@ViewContext.RouteData.Values["action"]" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="FirstName" class="form-label">Jméno <span class="text-danger">*</span></label>
        <input asp-for="FirstName" class="form-control" type="text" placeholder="Např. Jan" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LastName" class="form-label">Příjmení <span class="text-danger">*</span></label>
        <input asp-for="LastName" class="form-control" type="text" placeholder="Např. Novák" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email <span class="text-danger">*</span></label>
        <input asp-for="Email" class="form-control" type="email" placeholder="např. jan.novak@example.com" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label">Telefon</label>
        <input asp-for="Phone" class="form-control" type="tel" placeholder="(+420) 123 456 789" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Street" class="form-label">Ulice <span class="text-danger">*</span></label>
        <input asp-for="Street" class="form-control" type="text" placeholder="Např. Dlouhá 5" />
        <span asp-validation-for="Street" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="City" class="form-label">Město <span class="text-danger">*</span></label>
        <input asp-for="City" class="form-control" type="text" placeholder="Např. Praha" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PostalCode" class="form-label">PSČ <span class="text-danger">*</span></label>
        <input asp-for="PostalCode" class="form-control" type="text" placeholder="Např. 11000" />
        <span asp-validation-for="PostalCode" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2 mt-4">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Uložit
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-x"></i> Zrušit
        </a>
    </div>
</form>
